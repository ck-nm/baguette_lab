<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>public info</h2>
      <%= render 'public/users/info', public: current_public %>
      <h2 class="mt-3">New post</h2>
      <%= render 'form', post: @post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>posts</h2>
       <% @posts.each do |post|%>
         <div>
           title: <%= post.title %>
           opinion:  <%= post.opinion %>
           <%= link_to "詳細", public_post_path(post)%>
         </div>
       <% end %>
    </div>
  </div>
</div>
